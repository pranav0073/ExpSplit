<p id="notice"><%= notice %></p>

<h1>Listing Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Value</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.description %></td>
        <td><%= expense.value %></td>
        <td><%= expense.user.email %></td>
        <td><%= link_to 'Show', user_expense_path(current_user,expense)%></td>
        <td><%= link_to 'Edit', edit_user_expense_path(current_user,expense) %></td>
        <td><%= link_to 'Destroy', user_expense_path(current_user,expense), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

